*
  background-repeat no-repeat
  border 0
  margin 0
  padding 0

@font-face
  font-family 'Noto Sans'
  font-style normal
  font-weight 400
  src local('Noto Sans'), local('NotoSans'), url(../fonts/noto-sans-400.woff) format('woff')

@font-face
  font-family 'Noto Serif'
  font-style normal
  font-weight 700
  src local('Noto Serif Bold'), local('NotoSerif-Bold'), url(../fonts/noto-serif-700.woff) format('woff')

.clearfix
  display block

  &:after
    clear both
    content "."
    display block
    font-size 0
    height 0
    visibility hidden

body
  font 16px/1.5em 'Noto Sans', sans-serif
  text-align center

h1, h2
  font-family 'Noto Serif', serif

body, a
  color #7f7f7f

a
  text-decoration none

  &:hover
    text-decoration underline

.wrapper
  margin 0 auto
  text-align left
  width 960px

header
  border-top 5px solid #ccc
  padding-top 30px
  padding-bottom 30px

  h1
    float left
    font-size 20px

    a
      background-image url( ../favicon.ico )
      background-position 100% 50%
      background-repeat no-repeat
      color #ccc
      display block
      padding-right 21px

      &:hover
        text-decoration none

  p
    color #ddd
    float right
    text-align right
    width 60%

  a
    color #7f7f7f

    &:hover
      color #001F3F

article
  border-top 1px solid #ccc
  padding-top 20px
  padding-bottom 20px

  &.error

    h2
      padding-top 20px
      padding-bottom 20px      

  a
    display block
    padding-left 10px

    &:hover

      h2
        text-decoration underline

  h2, dl
    float left
    width 300px

  h2
    color #89c41a
    font-size 30px
    line-height 1.2em
    margin-bottom 20px
    padding-top 20px
    padding-bottom 20px

  dl

    dt
      color #ddd
      float left
      margin-right 5px

    dd
      margin-bottom 10px

  figure
    float right

footer
  color #ccc

  .wrapper
    border-top 1px solid #ccc
    padding-top 30px
    padding-bottom 30px
  
  #colophon
    float right

  #imprint
    color #ccc
    float left

  a
    color #ccc